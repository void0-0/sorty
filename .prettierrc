{
	"$schema": "https://json.schemastore.org/prettierrc",
	"tabWidth": 4,
	"singleQuote": false,
	"trailingComma": "none",
	"bracketSameLine": false,
	"bracketSpacing": true,
	"endOfLine": "lf",
	"arrowParens": "always",
	"plugins": ["prettier-plugin-css-order", "prettier-plugin-organize-imports", "prettier-plugin-tailwindcss"],
	"printWidth": 120,
	"semi": true,
	"useTabs": true,
	"overrides": [
		{
			"files": ["src/**/*.html"],
			"options": {
				"parser": "angular"
			}
		}
	]
}
